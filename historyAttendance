  <div class="app">
    <header>
      <div class="greeting" id="userName">Agus</div>
      <div class="employee-meta" id="userMeta">582744 | JKTTCP-9 | Planner</div>
    </header>

    <div class="section-title">
        <span>Log History</span>
        <i class="fas fa-history" style="color: var(--primary);"></i>
    </div>

    <section class="history-container" id="historyList">
        <!-- Data populated by Script -->
    </section>

    <section class="actions">
      <button class="btn-secondary" onclick="window.history.back()">
        <i class="fas fa-arrow-left"></i> Back to Home
      </button>
    </section>
  </div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // 1. Log Data for Agus
    const historyData = [
      { date: '2026-02-08', in: '07:02', out: '16:05', duration: '09:03:00', accidental: false },
      { date: '2026-02-07', in: '06:58', out: '16:00', duration: '09:02:00', accidental: false },
      { date: '2026-02-06', in: '07:00', out: '16:10', duration: '09:10:00', accidental: false },
      { date: '2026-02-05', in: '07:05', out: '16:00', duration: '08:55:00', accidental: false },
      { date: '2026-02-04', in: '15:30', out: '--:--', duration: '--', accidental: true }, // Accidental entry
      { date: '2026-02-04', in: '07:00', out: '15:10', duration: '08:10:00', accidental: false }
    ];

    const listContainer = document.getElementById("historyList");

    // 2. Render Loop
    historyData.forEach(item => {
      const dateObj = new Date(item.date);
      const day = dateObj.getDate().toString().padStart(2, '0');
      const month = dateObj.toLocaleDateString('en-GB', { month: 'short' });

      const card = document.createElement("div");
      // Add 'warning-card' class if it's the accidental entry
      card.className = `day-card ${item.accidental ? 'warning-card' : ''}`;
      
      card.innerHTML = `
        <div class="date-box">
          <span class="date-day">${day}</span>
          <span class="date-month">${month}</span>
        </div>
        <div class="time-details">
          ${item.accidental ? '<div class="warning-text"><i class="fas fa-exclamation-triangle"></i> Accidental Entry</div>' : ''}
          <div class="time-slot">
            <span class="time-label">Clock In</span>
            <span class="time-value">${item.in}</span>
          </div>
          <div class="time-slot">
            <span class="time-label">Clock Out</span>
            <span class="time-value">${item.out}</span>
          </div>
          ${!item.accidental ? `
          <div style="grid-column: span 2;">
            <span class="duration-badge">
                <i class="far fa-clock"></i> ${item.duration}
            </span>
          </div>` : ''}
        </div>
        <div class="status-icon">
            ${item.accidental ? 
                '<i class="fas fa-question-circle" style="color: var(--warning);"></i>' : 
                '<i class="fas fa-check-circle" style="color: #2ecc71;"></i>'}
        </div>
      `;
      listContainer.appendChild(card);
    });
  });
</script>
</body>
